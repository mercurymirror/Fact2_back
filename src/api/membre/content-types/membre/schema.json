{
  "kind": "collectionType",
  "collectionName": "membres",
  "info": {
    "singularName": "membre",
    "pluralName": "membres",
    "displayName": "Membre"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "richtext"
    },
    "illustration": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "participations": {
      "type": "component",
      "component": "membre.participation",
      "repeatable": true
    },
    "statut": {
      "type": "string",
      "maxLength": 45
    },
    "styledName": {
      "type": "string"
    },
    "color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    }
  }
}
